<div class="row" style="background-color: white" id="div_for_help">
    <div class="col-lg-12"  style=" {% if iconOfLibrary %} background-image: url('{{ request.url_for_static('landing/library.png') }}'); background-size: contain; {% endif %}" >
        <div class="ibox-content" style="padding: 5px 20px 0px 20px; {% if iconOfLibrary %}background-color: rgba(255,255,255,0.9); {% endif %}">
            <table width="100%">
                <tr>
                    <td style="{% if iconOfLibrary %}width:45%; color: black;{% else %}width:95%{% endif %}">
                        <h2 >{{ _('OAuth2 - Update client') }}</h2>
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align: middle">
                        {% set showTabsOfMenu = True %}
                        {% if showTabsOfMenu %}
                            <ol class="breadcrumb" style="{% if iconOfLibrary %} background-color: rgba(255,255,255,0.1); color: black{% endif %}" >
                                <li>
                                    <a href="{{ request.route_url('dashboard') }}">{{ _("Project overview") }}</a>
                                </li>
                                <li>
                                    <a href="{{ request.route_url("oauth2_client_list") }}">{{ _('Client list') }}</a>
                                </li>
                                <li class="active">
                                     <strong>{{ _('Update logo') }}</strong>
                                </li>
                            </ol>
                        {% endif %}
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>