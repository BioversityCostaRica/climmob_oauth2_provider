{% block client_form %}
    <form class="m-t require_busy" role="form" method="post" action="{{ request.url }}" enctype="multipart/form-data" >
        {{ form.secure_form(request) }}
        <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Name') }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="client_name" value="{{ clientDetails.client_name }}" required>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Root URL') }}</label>
            <div class="col-sm-10">
                <input type="url" class="form-control" name="client_uri" value="{{ clientDetails.client_uri }}" required>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Callback URL') }}</label>
            <div class="col-sm-10">
                <input type="url" class="form-control" name="redirect_uri" value="{{ clientDetails.redirect_uri }}" required>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
    
        <div id="upload_file" class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Logo') }}</label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input id="file" name="file" accept="image/png, image/svg+xml, image/jpeg" type="file" class="custom-file-input" required>
                    <label for="file" class="custom-file-label">{{ _('Choose file...') }}</label>
                    <span class="form-text m-b-none">{{ _('This logo will appear in the client login page. FormShare will scale it to 100px x 100px.') }}</span>
                </div>
            </div>
        </div>
        <div class="hr-line-dashed"></div>

        {% block client_form_actions %}
            <div class="form-group row">
                <div class="col-sm-4 col-sm-offset-2">
                    <button class="btn btn-primary btn-sm" type="submit">{{ _('Add client') }}</button>
                </div>
            </div>
        {% endblock client_form_actions %}
    </form>
{% endblock client_form %}